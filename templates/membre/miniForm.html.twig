{% extends "membre/index.html.twig" %}

{% block title %}Espace membre / Modification{% endblock %}

{% block body %}
<div class="container">
    <h2>Modification du compte</h2>
    <a class="btn btn-primary" href="{{path('coordonnees')}}"><- Retour</a>
{{ form_start(form) }}

    <div class="row mt-3">
        <div class="col-md-6">
    {{ form_row(form.nom) }}
        </div>
        <div class="col-md-6">
    {{ form_row(form.prenom) }}
        </div>
    </div>  
    <div class="row mt-3">  
    {{ form_row(form.date_de_naissance) }}
    </div>
    <div class="row mt-3"> 
    {{ form_row(form.email) }}
    </div>
    <div class="row mt-3"> 
    {{ form_row(form.isSubscribeToNewsletter) }}
    </div>
    <div class="row mt-3"> 
    {{ form_row(form.submit) }} 

    </div>


{{ form_end(form) }}

</div>

{% endblock %}