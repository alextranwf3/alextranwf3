{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<div class="container">
  {{ form_start(form) }}
    <div class="text-center">
      <div class="col-sm-6">{{ form_row(form.adresse)}}</div>
      <div class="col-sm-6">{{ form_row(form.telephone)}}</div>
      <div class="col-sm-6">{{ form_row(form.NombreEnfant)}}</div>
      <div class="col-sm-6">{{ form_row(form.TypeVoyage)}}</div>
      <div class="col-sm-6">{{ form_row(form.submit)}}</div>
    </div>
  

  {{ form_end(form) }}
</div>
{% endblock %}